{
  "$schema": "https://json.schemastore.org/package",
  "scripts": {
    "git": "git add . && git commit -m \"$(date '+%-m').$(date '+%-d').$(date '+%-H')\"",
    "lint": "pnpm -r lint",
    "upd": "pnpm -r upd",
    "prepare": "pnpm husky install",
    "dev": "pnpm -F app dev",
    "build": "pnpm -F app build",
    "preview": "pnpm -F app preview",
    "ui": "pnpm -F components dev",
    "chart": "pnpm -F chart dev",
    "chart:build": "pnpm -F chart build",
    "chart:preview": "pnpm -F chart preview"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3"
  }
}
